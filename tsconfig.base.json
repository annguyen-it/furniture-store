{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@furniture-store/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@furniture-store/api/core/feature": [
        "libs/api/core/feature/src/index.ts"
      ],
      "@furniture-store/web/shared/assets": [
        "libs/web/shared/assets/src/index.ts"
      ],
      "@furniture-store/web/shell/feature/web-shell": [
        "libs/web/shell/feature/web-shell/src/index.ts"
      ],
      "@furniture-store/web/shell/ui/footer": [
        "libs/web/shell/ui/footer/src/index.ts"
      ],
      "@furniture-store/web/shell/ui/layout": [
        "libs/web/shell/ui/layout/src/index.ts"
      ],
      "@furniture-store/web/shell/ui/main-view": [
        "libs/web/shell/ui/main-view/src/index.ts"
      ],
      "@furniture-store/web/shell/ui/nav-bar": [
        "libs/web/shell/ui/nav-bar/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
